{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "allowJs": true,
        "checkJs": false,
        "jsx": "react-jsx",
        "resolveJsonModule": true,
        "outDir": "./dist",
        "rootDir": "./src",
    },
    "include": [
        "server/**/*",
        "server.ts",
    ],
    "exclude": [
        "node_modules",
        "build"
    ]
}