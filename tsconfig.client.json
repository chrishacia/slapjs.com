{
    "compilerOptions": {
      "target": "ES6",
      "lib": ["dom", "es2015", "es2017"],
      "jsx": "react",
      "module": "commonjs",
      "allowJs": true,
      "checkJs": false,
      "outDir": "./public/dist",
      "rootDir": "./client/src",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["client/src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
